#Q2. Define an R vector of the first 500 Fibonacci numbers.
{
  fibo <- numeric(length = 500)
  fibo[1] <- 0
  fibo[2] <- 1
  for(i in 3:500)
  {
    fibo[i] <- fibo[i-1] + fibo[i-2]
  }
  fibo
}

